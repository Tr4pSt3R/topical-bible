.row
  .canon
    %h1 
      = @article.canonised_title 
  .content-belt.has-pyment
    = @article.content
  .tags
    - @article.tags.each do |tag|
      = link_to tag.name, tag_path(tag.name)
  .links
    = link_to 'Edit', edit_article_path(@article)
    = link_to 'Back', articles_path
    = link_to 'New', new_article_path